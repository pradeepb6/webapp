{
    "name": "webapp-kit",
    "version": "0.1.0",
    "description": "Web Application Starter Kit",
    "license": "MIT",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
    "repository": "https://github.com/damianobarbati/webapp-kit",
    "main": "index.js",
    "scripts": {
        "codebase:size": "find -E . -regex '.*\\.(html|js|css)$' -not -path './node_modules/**' -not -path './dist/**' | xargs wc -l",
        "jslint": "eslint --ignore-path .gitignore '**/*.js'",
        "test": "jest --no-cache --coverage --config .jestrc",
        "test:watch": "yarn test --watch",
        "serve:dev": "DOTENV_CONFIG_PATH=config/development.env yarn nodemon --harmony -r esm -r dotenv/config index.js",
        "serve:prod": "NODE_ENV=production node --harmony -r esm -r dotenv/config index.js",
        "build:dev": "DOTENV_CONFIG_PATH=config/development.env npx -n '-r esm' -n '-r dotenv/config' webpack --config ./config/webpack.config.js --progress",
        "build:dev:hot": "DOTENV_CONFIG_PATH=config/development.env npx -n '-r esm' -n '-r dotenv/config' -n '--trace-deprecation' webpack-dev-server --config ./config/webpack.config.js --progress",
        "build:prod": "DOTENV_CONFIG_PATH=config/production.env npx -n '-r esm' -n '-r dotenv/config' webpack --config ./config/webpack.config.js --progress",
        "docker:build": "docker build --no-cache --tag $npm_package_name --build-arg NODE_ENV=production --file ./config/Dockerfile ./",
        "docker:run": "docker stop $npm_package_name; docker container prune -f; docker run --name $npm_package_name --tty --interactive --publish 8080:8080 --publish 8443:8443 --restart unless-stopped --detach $npm_package_name:latest",
        "docker:bash": "docker exec --tty --interactive $npm_package_name /bin/bash",
        "docker:dry:run": "yarn docker:build && yarn docker:run && yarn docker:bash",
        "docker:push": "docker push $npm_package_name:latest",
        "docker:deploy": "ssh root@server \"docker rm -f $npm_package_name && docker pull $npm_package_name; docker run --name $npm_package_name --tty --interactive --publish 8080:8080 --publish 8443:8443 --detach $npm_package_name:latest\""
    },
    "enginesStrict": true,
    "engines": {
        "node": ">= 11.1.0"
    },
    "browserslist": [
        "chrome 70",
        "ios_saf 12"
    ],
    "dependencies": {
        "dotenv": "^8.0.0",
        "esm": "3.2.25",
        "kcors": "^2.2.1",
        "koa": "^2.7.0",
        "koa-body": "^4.1.0",
        "koa-compress": "^3.0.0",
        "koa-json": "^2.0.2",
        "koa-mount": "^4.0.0",
        "koa-no-trailing-slash": "^2.1.0",
        "koa-router": "^7.4.0",
        "koa-send": "^5.0.0",
        "koa-sslify": "^4.0.3",
        "koa-useragent": "^1.2.1",
        "lodash-es": "^4.17.11",
        "nodemon": "^1.19.1",
        "pg": "^7.10.0",
        "pm2": "^3.5.1",
        "sequelize": "^5.8.9",
        "yargs": "^13.2.4"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "axios": "^0.19.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.7.1",
        "babel-loader": "^8.0.6",
        "babel-plugin-lodash": "^3.3.2",
        "browserslist-useragent": "^3.0.0",
        "classnames": "^2.2.5",
        "clean-webpack-plugin": "^3.0.0",
        "compression-webpack-plugin": "^3.0.0",
        "core-js": "^3.1.3",
        "eslint": "^5.16.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-jest": "^22.6.4",
        "eslint-plugin-react": "^7.13.0",
        "file-loader": "^4.0.0",
        "html5-webpack-plugin": "^1.0.22",
        "img-loader": "^3.0.1",
        "jest": "^24.7.1",
        "jss-reset": "^1.0.3",
        "jwt-decode": "^2.2.0",
        "open-browser-webpack-plugin": "^0.0.5",
        "preact": "^10.0.0-beta.2",
        "raw-loader": "^3.0.0",
        "react-jss": "^10.0.0-alpha.17",
        "react-router-dom": "^5.0.1",
        "recharts": "^1.6.2",
        "terser-webpack-plugin": "^1.3.0",
        "typeface-montserrat": "^0.0.54",
        "url-loader": "^2.0.0",
        "webpack": "^4.34.0",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.4",
        "webpack-dev-server": "^3.7.1",
        "webpack-notifier": "^1.7.0"
    }
}
